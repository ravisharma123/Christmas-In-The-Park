<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:background="@drawable/citp_background" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/citp_logo"
            android:src="@drawable/citp_logo"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament1"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_alignBottom="@+id/donate_icon"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament2"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/citp_logo"
            android:layout_toRightOf="@+id/ornament7"
            android:layout_toEndOf="@+id/ornament7" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament3"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_above="@+id/ornament4"
            android:layout_toLeftOf="@+id/ornament9"
            android:layout_toStartOf="@+id/ornament9" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament4"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/ornament2"
            android:layout_alignRight="@+id/twitter_icon"
            android:layout_alignEnd="@+id/twitter_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament5"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_alignTop="@+id/ornament4"
            android:layout_alignLeft="@+id/ornament8"
            android:layout_alignStart="@+id/ornament8" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament6"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_alignTop="@+id/ornament5"
            android:layout_alignLeft="@+id/yt_icon"
            android:layout_alignStart="@+id/yt_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament7"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_above="@+id/twitter_icon"
            android:layout_toRightOf="@+id/fb_icon"
            android:layout_toEndOf="@+id/fb_icon"
            android:layout_marginBottom="49dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament8"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_alignTop="@+id/ornament7"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ornament9"
            android:src="@drawable/ornament"
            android:background="@null"
            android:layout_alignTop="@+id/ornament8"
            android:layout_toLeftOf="@+id/insta_icon"
            android:layout_toStartOf="@+id/insta_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donate_icon"
            android:src="@drawable/donate"
            android:background="@null"
            android:layout_alignBottom="@+id/citp_logo"
            android:layout_alignRight="@+id/insta_icon"
            android:layout_alignEnd="@+id/insta_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_icon"
            android:src="@drawable/fb_icon"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitter_icon"
            android:src="@drawable/twitter_icon"
            android:background="@null"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_alignTop="@+id/fb_icon"
            android:layout_toRightOf="@+id/fb_icon"
            android:layout_toEndOf="@+id/fb_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insta_icon"
            android:src="@drawable/insta_icon"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yt_icon"
            android:src="@drawable/yt_icon"
            android:background="@null"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignTop="@+id/twitter_icon"
            android:layout_toLeftOf="@+id/insta_icon"
            android:layout_toStartOf="@+id/insta_icon" />
    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>


